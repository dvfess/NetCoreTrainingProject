@model IEnumerable<NetCoreTrainingProject.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@Html.ActionLink("Работники", "Index", "Home")

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Author</td>
            <td>@item.Title</td>
            <td>@item.ISBN</td>
            <td>@Html.ActionLink("Детали", "Details", new { id = item.Id })</td>
        </tr>
    }
</table>